{
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"] // allows "@/db" -> "./src/db"
    },
    "types": ["jest", "node"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
